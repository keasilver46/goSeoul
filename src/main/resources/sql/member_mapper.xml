<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mymember">

    <!-- 로그인 인증 -->
    <select id="loginCheck" parameterType="String" resultType="member">
        select * from userdata where id=#{id}
    </select>

    <!-- 아이디 찾기 -->
    <select id="findMemberId" parameterType="String" resultType="member">
        select * from userdata where name = #{name}
    </select>

    <select id="searchEmail" parameterType="String" resultType="member">
        select email, id from userdata where email = #{email}
    </select>

    <!-- 임시비밀번호 발급을 위한 업데이트 -->
    <update id="updatePass" parameterType="member">
        update userdata set pass=#{pass} where email=#{email}
    </update>
</mapper>